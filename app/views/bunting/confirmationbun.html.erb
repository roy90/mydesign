<h1>Approve / Reject / KIV Order</h1>

<%= @msg%>

<form method="POST">
	<% @cari.each do |c|%>
	<fieldset>
		<legend>UPDATE ORDER STATUS</legend>
	<table>
		<tr>
			<td>No Kp</td><td><input type=text name="nokp2" value="<%= c.nokp2%>"></td>
		</tr>
		<tr>
			<td>Name</td><td><input type=text name="cusname2" value="<%= c.cusname2%>"></td>
		</tr>
		<tr>
			<td>Status</td><td><select name="orderstat">
				<% @order.each do |p| %>
					<option><%=p.info%></option>
				<%end%>
				</select></td>
		</tr>
		<tr>
		
			<td colspan="2" align="center"><input type="submit" value="SUBMIT">
			<a href="/checkorder"><input type="button" value="CANCEL"></a>
			<a href="/detailbunting/<%= c.id%>"><input type="button" value="BACK"></a></td>
		
		<tr>
	</table>
	</fieldset>
	<%end%>
</form>